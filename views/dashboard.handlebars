
<h3>Welcome to your dashboard</h3>

<a href="/newpost"><button class="btn purple darken-1">Add new post</button></a>

<h4>Manage your posts below:</h4>

{{#each posts as |post|}}
    <div class='card'>
        <div class="card-content">
            <span class="card-title">
        {{post.post_title}}</span>
        <p>
        {{post.post_text}}
      </p>
      </br>
      <p>
        By: {{user.username}}
      </p>
      <p>
        Posted on: {{format_date post.createdAt}}
      </p>
        </div>
        <div class="card-action">
          <a href="post/{{post.id}}" class="purple-text text-darken-4">Go to post page</a>
          <a href="post/edit/{{post.id}}" class="purple-text text-darken-4">Update post</a>
          <button id="delete-post-btn" data-id="{{post.id}}" class="btn red accent-4" type="submit">Delete post</button>
        </div>
    </div>
{{/each}}

<script src="/js/delete-post.js"></script>



