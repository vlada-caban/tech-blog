
<h3>Welcome to your dashboard</h3>

<a href="/newpost"><button class="btn purple darken-1">Add new post</button></a>

</br>

{{#each posts as |post|}}
    <div class='card'>
        <div class="card-content">
            <span class="card-title">
        {{post.post_title}}</span>
        <p>
        {{post.post_text}}
      </p>
      </br>
      <p>
        By: {{user.username}}
      </p>
      <p>
        Posted on: {{format_date post.createdAt}}
      </p>
        </div>
        <div class="card-action">
          <a href="post/{{post.id}}" class="purple-text text-darken-4">Go to post page</a>
          <a href="/dashboard" class="red-text text-accent-4">Delete post</a>
          <a href="/dashboard" class="purple-text text-darken-4">Update post</a>
        </div>
    </div>
  {{/each}}

